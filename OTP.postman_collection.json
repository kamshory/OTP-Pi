	"item": [
		{
			"name": "Create OTP",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let timestamp = parseInt((new Date()).getTime());\r",
							"let datetime = parseInt(timestamp/1000);\r",
							"pm.globals.set(\"timestamp\", timestamp);\r",
							"pm.environment.set(\"timestamp\", timestamp);\r",
							"\r",
							"let expiration = datetime + 60;\r",
							"pm.globals.set(\"expiration\", expiration);\r",
							"pm.environment.set(\"expiration\", expiration);\r",
							"\r",
							"pm.globals.set(\"datetime\", datetime);\r",
							"pm.environment.set(\"datetime\", datetime);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "kamshory",
							"type": "string"
						},
						{
							"key": "username",
							"value": "kamshory",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"command\": \"create-otp\",\r\n    \"data\": {\r\n        \"id\": {{datetime}},\r\n        \"date_time\": {{datetime}},\r\n        \"expiration\": {{expiration}},\r\n        \"receiver\": \"08126666666\",\r\n        \"message\": \"Your OTP is %s\",\r\n        \"reference\": \"{{timestamp}}\",\r\n        \"param1\": \"100000\",\r\n        \"param2\": \"1234567890\",\r\n        \"param3\": \"987654\",\r\n        \"param4\": \"674527846556468254\"\r\n    }\r\n}",
